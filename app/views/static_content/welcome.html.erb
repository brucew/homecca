<% content_for :javascripts do %>
    <%= javascript_include_tag "newt/coin-slider","newt/jquery.content-panel-switcher","newt/jquery.fancybox.js?v=2.0.6",
    "newt/jquery.fancybox-media.js?v=1.0.0"  %>
        <script type="text/javascript">
            $(document).ready(function(){
                jcps.fader(300, '#switcher-panel');//show hide content
                $('.jcps_buttons a').click(function(){ //for coin selection
                    $('.jcps_buttons a').removeClass('current');
                    $(this).addClass('current');
                });
/*                $('#video_preview').live("click",function(){
                    $(this).hide();
                    $(this).next().show();
                });*/

            //
                $('.fancybox-media').fancybox({
                    openEffect  : 'none',
                    closeEffect : 'none', 
                    callbackOnClose : function() { 
                        $("#fancy_content").empty(); 
                    },
                    helpers : {
                        media : {}
                    } 
                });
                    $("#gallery_video_image")
                    .mouseover(function() { 
                        var src = $("#play_image_overlay").attr("src").match(/[^\.]+/) + "_hover.png";
                        $("#play_image_overlay").attr("src", src);
                    })
                    .mouseout(function() {
                        var src = $("#play_image_overlay").attr("src").replace("_hover.png", ".png");
                        $("#play_image_overlay").attr("src", src);
                    });
                $("#subscribe_now_img").effect("shake", { times:6,direction:"down",distance:5 }, 100);
            });
        </script>
<% end %>
