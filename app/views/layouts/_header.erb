<!-- _________________________ Start Header _________________________ -->
<div id="header" class="alternative">
  <%= link_to image_tag('homecca_logo.png', :alt => 'Homecca.com'), root_path, :class => 'logo', :title => 'Homecca.com' %>

  <!-- _________________________ Start Navigation _________________________ -->
  <ul id="navigation" style="left:230px;">
    <% if current_user %>
        <li><%= link_to 'My Home', home_path %></li>
    <% end %>
    <li><%= link_to 'Jobs for Hire', requests_path %></li>
    <li><%= link_to 'Find Workers', new_request_path %></li>  
    <li><%= link_to 'Maintenance Info', articles_path %></li>
    <li><%= link_to 'About', faq_path %></li>
    <% if current_user and current_user.admin? %>
        <li><%= link_to 'Admin', admin_path %></li>
    <% end %>
  </ul>
  <!-- _________________________ Finish Navigation _________________________ -->

  <div class="top_line">
    <% if current_user %>
            <%= link_to current_user.name, home_path, :class => 'user_area_nobg' %>
        <div class="inlin">
          <div>
            <%= link_to image_tag('session/logout.png', :class => 'nav_icon', :title => 'Logout'), logout_path %>
          </div>
        </div>
    <% else %>
        <%= link_to 'Log In', login_path, :class => 'user_area' %>
    <% end %>

  </div>
</div>
<!-- _________________________ Finish Header _________________________ -->
